<h2>New Burger Order</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <br>
    <input type="text"class= "form-control" id="ca" name="name">
  </div>

  <button type="submit" class="btn btn-primary">Add Burger Order</button>
</form>
<br>
<h1>Burger order!</h1>
<div class="row">
  <div class="non-consumed col">
    <h2>Burgers not consumed</h2>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="consumed col">
    <h2>Burgers consumed</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block2 devoured=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>



